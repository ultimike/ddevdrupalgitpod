{
    "name": "ultimike/ddevdrupalgitpod",
    "description": "Composer plugin to add Gitpod.io support for DDEV-Local Drupal sites.",
    "type": "library",
    "require": {
        "drupal/core-composer-scaffold": "^8.8 || ^9.0"
    },
    "license": "GNU General Public License, version 2",
    "authors": [
        {
            "name": "Michael Anello",
            "email": "manello@gmail.com"
        }
    ],
    "extra": {
    "drupal-scaffold": {
      "file-mapping": {
        ".gitpod.yml": ".gitpod.yml",
        ".gitpod.Dockerfile": ".gitpod.Dockerfile",
        ".ddev/generate-fqdns.sh": "generate-fqdns.sh",
        ".ddev/generate-xdebug-host-ip.sh": "generate-xdebug-host-ip.sh",
        ".ddev/ddevdrupalgitpod.txt": {
          "path": "ddevdrupalgitpod.txt",
          "overwrite": false
        }
      }
    }
  }
}
